<div class="container">
<h1>New Url</h1>

<% if @url.errors.any? %>
  <% @url.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<div class="form-group">
<%= form_for @url, url: urls_path, method: :post do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :long_url %>
  <%= f.text_field :long_url, class: 'form-control' %>
</div>
<div class="form-group">
<%= f.label :image %>
<%= f.file_field :image, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.submit class: 'btn btn-primary' %>
</div>
    </div>
<% end %>